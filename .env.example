# Enhanced Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SECURITY KEYS (Generate strong random values for production)
# =============================================================================
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# =============================================================================
# BINANCE API CONFIGURATION
# =============================================================================
# Production API Keys (Keep empty if only using testnet)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Testnet API Keys (For safe testing)
BINANCE_TESTNET_API_KEY=your-testnet-api-key
BINANCE_TESTNET_SECRET=your-testnet-api-secret

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (Production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trading_bot
POSTGRES_USER=trading_bot
POSTGRES_PASSWORD=strong-postgres-password-here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=strong-redis-password-here

# =============================================================================
# AUTHENTICATION
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=strong-admin-password-here

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_RECIPIENT=recipient@email.com

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# =============================================================================
# MONITORING & METRICS
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=strong-grafana-password-here

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# CoinGecko API (For market data)
COINGECKO_API_KEY=

# Alternative.me API (For Fear & Greed Index)
ALTERNATIVE_ME_API_KEY=

# Webhook URL (For notifications)
WEBHOOK_URL=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=production

# Timezone
TZ=UTC

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Domain Configuration
DOMAIN_NAME=your-domain.com

# SSL Certificate Paths
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Worker Configuration
MAX_WORKERS=8
WORKER_TIMEOUT=300

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=backup-encryption-key-here

# S3 Backup (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BACKUP_BUCKET=
S3_BACKUP_REGION=
